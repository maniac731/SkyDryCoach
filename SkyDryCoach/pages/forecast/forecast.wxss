/* pages/forecast/forecast.wxss */

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}



/* 位置信息 */
.location-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0;
}

.location-details {
  flex: 1;
}

.location-icon {
  font-size: 38rpx; /* 从36rpx增大到38rpx */
  margin-right: 20rpx;
}

.location-text {
  display: block;
  font-size: 34rpx; /* 从32rpx增大到34rpx */
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
}

.location-coords {
  display: block;
  font-size: 26rpx; /* 从24rpx增大到26rpx */
  color: #666;
}

.location-actions {
  margin-left: 20rpx;
}

.btn-small {
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx; /* 从24rpx增大到26rpx */
  color: #6c757d;
}

/* 操作按钮 */
.action-buttons {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 20rpx auto;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  width: calc(100% - 40rpx);
  max-width: 750rpx;
}





/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #4facfe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 30rpx; /* 从28rpx增大到30rpx */
  color: #666;
}

/* 错误卡片 */
.error-card {
  background: #f8d7da;
  border: 2rpx solid #f5c6cb;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx auto;
  text-align: center;
  box-sizing: border-box;
  width: calc(100% - 40rpx);
  max-width: 750rpx;
}

.error-icon {
  display: block;
  font-size: 52rpx; /* 从48rpx增大到52rpx */
  margin-bottom: 20rpx;
}

.error-text {
  display: block;
  font-size: 30rpx; /* 从28rpx增大到30rpx */
  color: #721c24;
  margin-bottom: 30rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .action-buttons {
    padding: 20rpx;
  }
}